{
  "manifest_version": 3,
  "name": "fosbunny flop",
  "version": "1.0",
  "description": "A basic Chrome extension.",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bunny16.png",
      "48": "images/bunny48.png",
      "128": "images/bunny128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/bunny16.png",
    "48": "images/bunny48.png",
    "128": "images/bunny128.png"
  }
}
